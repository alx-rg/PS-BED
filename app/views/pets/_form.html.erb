<%= form_with(model: pet) do |form| %>

  <%= render "shared/errors", object: pet %>

  <%= pet.errors.full_messages.to_sentence %>

  <%= form.label :name %>
  <%= form.text_field :name, autofocus: true %>

  <%= form.label :race %>
  <%= form.text_field :race %>

  <%= form.label :breed %>
  <%= form.text_field :breed %>

  <%= form.label :birthday %>
  <%= form.date_field :birthday %>

  <%= form.label :favoriteFood %>
  <%= form.text_field :favoriteFood %>

  <%= form.label :picUrl %>
  <%= form.text_field :picUrl %>

  <%= form.label :price %>
  <%= form.number_field :price %>

  <%# <%= form.label :picUrlSq %>
  <%# <%= form.text_field :picUrlSq %>

  <% if controller_name == 'pets' && action_name == 'new' %>
    <%= form.label :image %>
    <%= form.file_field :image %>
  <% elsif controller_name == 'pets' && action_name == 'edit' %>
    <%= form.label :picUrlSq %>
    <%= form.text_field :picUrlSq %>
  <% end %>

  <%= form.label :description %>
  <%= form.text_area :description, rows: 5 %>

  <%= form.label :fetch %>
  <%= form.check_box :fetch %>

  <%= form.submit %>

<% end %>
